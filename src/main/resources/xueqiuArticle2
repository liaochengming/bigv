  var getTextNodesIn = function(el) {
    return $(el).find(":not(iframe)").addBack().contents().filter(function() {
      return this.nodeType == 3;
    });
  };
  var copyright = function (getString) {
    var author = getTextNodesIn('.status-single-hd .name').eq(0).text()
    var info = [
      '',
      '作者：' + author,
      '链接：' + window.location.href,
      '来源：雪球',
      '著作权归作者所有。商业转载请联系作者获得授权，非商业转载请注明出处。'
    ];
    if (getString) {
      return info.join('\n');
    } else {
      return info;
    }
  };
  var warpText = function (text) {
    return '<div>' + text + '<br/>' + copyright().join('<br/>') + '</div>';
  }
  var getSelectText = function () {
      var text = "";
      if (window.getSelection) {
        text = window.getSelection().toString()
      } else if (window.document.selection && "Control" !== window.document.selection.type) {
        text = window.document.selection.createRange().text;
      }
      return text;
  }
  $(document).on('copy', '.status-content .detail', function (event) {
    var text = getSelectText();
    if (text && text.length > 42) {
      if (typeof event.originalEvent.clipboardData === 'object') {
        event.originalEvent.clipboardData.setData('text/html', warpText(text));
        event.originalEvent.clipboardData.setData('text/plain', text + '\n' + copyright(true));
        if (event.originalEvent.clipboardData.getData('text/plain').length > 0) {
          event.preventDefault();
          return;
        }
      }

      if (window.getSelection) {
        var createDiv = $(warpText(text)).css({
          'position': 'fixed',
          'left': '-9999px'
        }).appendTo('body');
        window.getSelection().selectAllChildren(createDiv[0]);
        window.setTimeout(function () {
          createDiv.remove();
        }, 200)
      }
    }
  });

  var pageId = window.location.pathname.split('/').pop();
  //- 页面进入统计
  var data = {
    type: 1,
    page: 47,
    mod: 1,
    data: {
      status_id: pageId
    }
  };
  Analytics(data);
})();
